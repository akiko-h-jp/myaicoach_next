generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Task {
  id             String   @id @default(uuid())
  userId         String
  title          String
  status         TaskStatus @default(TODO)
  priority       TaskPriority @default(NONE)
  description    String?   @db.Text
  categoryId     String?
  dueDate        DateTime?
  estimatedHours Float?
  progress       Float?     @default(0)
  done           Boolean    @default(false) // legacy compatibility
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  category       Category?  @relation(fields: [categoryId], references: [id])
  scheduleEntries ScheduleEntry[]

  @@index([userId])
  @@index([categoryId])
}

model Category {
  id                  String   @id @default(uuid())
  userId              String
  name                String
  dailyLimitHours     Float?
  weekendHolidayHours Float?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  tasks               Task[]
  scheduleEntries     ScheduleEntry[]

  @@index([userId])
}

model ScheduleEntry {
  id             String   @id @default(uuid())
  userId         String
  taskId         String
  categoryId     String?
  date           DateTime
  scheduledHours Float?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  task     Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id])

  @@index([userId])
  @@index([taskId])
  @@index([date])
}

model LineMessage {
  id        String   @id @default(uuid())
  userId    String
  date      DateTime
  message   String
  sentAt    DateTime?
  type      LineMessageType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([date])
}

model UserSetting {
  id                  String   @id @default(uuid())
  userId              String   @unique
  weekdayDailyHours   Float?
  weekendHolidayHours Float?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([userId])
}

enum TaskStatus {
  TODO
  DONE
}

enum TaskPriority {
  HIGH
  MEDIUM
  LOW
  NONE
}

enum LineMessageType {
  DAILY
  COACH
  PROGRESS
}
